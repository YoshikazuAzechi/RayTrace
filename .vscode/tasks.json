{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake",
            "type": "process",
            "command": "cmake.bat",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "msbuild",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "./build/RayTrace.sln"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}